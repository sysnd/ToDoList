@page "/register"
@layout EmptyLayout

@using ToDoList.Shared.Models
@using ToDoList.Client.Components.Auth
@using ToDoList.Client.Components.Common

<AuthorizeView>
    <Authorized>
        <Redirect To="/" />
    </Authorized>
    <NotAuthorized>
        <RegisterForm User=user />
    </NotAuthorized>
</AuthorizeView>

@code {
    User user = new User();
}
