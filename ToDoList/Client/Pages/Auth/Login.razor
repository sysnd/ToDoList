@page "/login"
@layout EmptyLayout

@using ToDoList.Client.Components.Auth
@using ToDoList.Shared.Models.Requests
@using ToDoList.Client.Components.Common

<AuthorizeView>
    <Authorized>
        <Redirect To="/" />
    </Authorized>
    <NotAuthorized>
        <LoginForm User=user />
    </NotAuthorized>
</AuthorizeView>

@code {
    UserLoginRequest user = new UserLoginRequest();
}
